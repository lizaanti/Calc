<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:textSize="40pt"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:gravity="right|center"
        android:layout_weight="1"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="AC"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
        <Button
            android:id="@+id/btnPlusMinus"
            android:onClick="clickNumber"
            android:textColor="@color/white"
            android:text="+/-"
            android:height="30pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/bloody"
            />
        <Button
            android:id="@+id/btnDivide"
            android:onClick="operation"
            android:textColor="@color/white"
            android:text="/"
            android:height="30pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/bloody"
            />
        <Button
            android:id="@+id/btnMultiply"
            android:onClick="operation"
            android:textColor="@color/white"
            android:text="*"
            android:height="30pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/bloody"
            />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn7"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="7"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn8"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="8"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn9"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="9"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btnProcent"
                android:onClick="clickProcent"
                android:textColor="@color/white"
                android:text="%"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn4"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="4"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn5"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="5"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn6"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="6"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btnMinus"
                android:onClick="operation"
                android:textColor="@color/white"
                android:text="-"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="1"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn2"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="2"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btn3"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="3"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btnPlus"
                android:onClick="operation"
                android:textColor="@color/white"
                android:text="+"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn0"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="0"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btnPeriod"
                android:onClick="clickNumber"
                android:textColor="@color/white"
                android:text="."
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
            <Button
                android:id="@+id/btnResult"
                android:onClick="clickResult"
                android:textColor="@color/white"
                android:text="="
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/bloody"
                />
        </TableRow>


    </LinearLayout>
</LinearLayout>